<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ramji.android.modechange">

    <!-- uses permission for internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- uses permission for Accessing fine location (using GPS,CellTowers and WiFi) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Google places API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCwJC2II5irM-1-0LWVztcs4GOxGdSYLro" />


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.example.ramji.android.modechange.provider.PlaceContentProvider"
            android:authorities="com.example.ramji.android.modechange"
            android:exported="false"/>

        <receiver android:name=".GeofenceBroadcastReceiver" />
    </application>

</manifest>